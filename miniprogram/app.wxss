/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  padding-top: 50px;
  align-items: center;
  justify-content: flex-start;
  background-color: #000000;
  width: 100%;
  height: 100vh; /* Use viewport height to ensure full screen height */
  min-height: 100vh; /* Ensure it covers at least the full viewport height */
}

.draw-area {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 90%;
  padding-bottom: 120rpx; /* 留出底部导航栏的空间 */
}

.progress-container{
  width: 90%;
}