.card {
  background-color: rgba(51, 51, 51, 0);
  border-radius: 10px;
  overflow: hidden;
  width: 100%;
}

.card-content {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin: 5px;
}

.card-image {
  width: 100%;
  border-radius: 8px;
  max-height: 16vh;
}

.description{
  width: 80%;
}

.card-title {
  font-size: 10px;
  color: #fff;
}

.card-subtitle {
  font-size: 10px;
  color: #FFE55A;
}