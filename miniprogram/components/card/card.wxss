.card {
  width: 100%; /* 确保组件宽度自动适应父容器 */
  background-color: rgba(51, 51, 51, 0);
  border-radius: 10px;
  overflow: hidden;
}

.card-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 5px;
}

.card-image {
  width: 100px;
  height: 125px;
}

.description{
  width: 80%;
}

.card-title {
  font-size: 12px;
  color: #fff;
}

.card-subtitle {
  font-size: 10px;
  color: #7c8453;
}