.comic-item-container {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow: hidden;
  width: 100%;
  padding-top: 140%;
}

.comic-item {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 10px;
}

.comic-image-container {
  height: 80%;
  width: 100%;
  padding-left: 10%;
  border-radius: 0;
}

.image {
  border-top-left-radius: 5%;
  width: 100%;
  height: 100%;
}

.comic-title {
  text-align: left;
  font-size: 14px;
  color: #ffffff;
}

.comic-footer {
  margin-top: 8px;
  margin-left: 10px;
  width: 90%;
  height: 10%;
  background-color: #F5CD94;
  overflow: hidden;
  border-top-left-radius: 10px;
  border-bottom-right-radius: 5px;
  border-bottom-left-radius: 10px;
}

.collection-title {
  font-size: 10px;
  color: #ffffff;
  width: 100%;
  text-align: center;
  padding-top: 10px;
}

.empty-image {
  background: #565656;
  display: flex;
  flex-direction: column;
}

.plus-icon {
  margin-top: 20px;
  margin-left: 10px;
  width: 30px;
  height: 23px;
  background: #F5CD94;
  border-radius: 5px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.horizonton-line {
  margin-top: 10px;
  margin-left: 10px;
  width: 30px;
  height: 3px;
  background: #F5CD94;
}

.thumbnail {
  width: 100%;
  height: 100%;
  background-color: #000000;
  border-radius: 15px;
}
