.navigation-container {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  border-top: 1px solid #ddd;
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-shadow: 0 -1px 5px rgba(0,0,0,0.1);
}

.nav-icon {
  width: 40rpx;
  height: 40rpx;
}

.profile-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 0 5px rgba(0,0,0,0.1);
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.profile {
  position: relative;
  top: -20rpx; /* 将头像图片部分超出底部导航栏 */
}

.nav-icon {
  width: 40rpx;
  height: 40rpx;
}

.nav-text{
  font-size: 20rpx;
  color: #333;
}