.navigation-container {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  border-top: 1px solid #ddd;
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-shadow: 0 -1px 5px rgba(0, 0, 0, 0.1);
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nav-text {
  font-size: 20rpx;
  color: #333;
}

.icon-container {
  width: 35px;
  height: 35px;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
}

.nav-icon {
  width: 70%;
  height: 70%;
}

.active {
  background-color: #FF0000;
}

.profile-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.nav-icon-center{
  width: 100%;
  height: 100%;
  position: relative;
  top: 1px;
}

.profile {
  position: relative;
  top: -20rpx;
}