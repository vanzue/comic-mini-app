.pill-container {
  position: relative;
  width: 100%;
  height: 50px;
  margin-bottom: 5px;
}

.pill {
  width: 30%;
  height: 20px;
  border-radius: 12px;
  position: absolute;
  border: 1px solid;
  background-color: rgb(77, 76, 76);
}

.pill:nth-child(1) {
  z-index: 4;
}

.pill:nth-child(2) {
  left: 23%;
  z-index: 3;
}

.pill:nth-child(2) {
  left: 23%;
  z-index: 3;
}

.pill:nth-child(3) {
  left: 46%;
  z-index: 2;
}

.pill:nth-child(4) {
  left: 69%;
  z-index: 1;
}

.active-1 {
  background-color: rgb(150, 150, 99);
}

.active-2 {
  background-color: rgb(219, 162, 124);
}
.active-3 {
  background-color: rgb(226, 108, 71);
}
.active-4 {
  background-color: rgb(163, 0, 0);
}