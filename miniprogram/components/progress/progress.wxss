.pill-container {
  position: relative;
  width: 100%;
  height: 50rpx;
  margin-bottom: 5rpx;
  font-size: 20rpx;
  color: #ffffff;
}

.pill {
  width: 35%;
  height: 35rpx;
  border-radius: 12px;
  position: absolute;
  border: 1px solid;
  background-color: rgb(77, 76, 76);
  display: flex;
  align-items: center;
}

.pill:nth-child(1) {
  z-index: 4;
}

.pill:nth-child(2) {
  left: 30%;
  z-index: 3;
}

.pill:nth-child(3) {
  left: 60%;
  z-index: 2;
}

.text {
  position: absolute;
  right: 40%;
}

.active-1 {
  background-color: #F7BA83;
  color: #000000;
}

.active-2 {
  background-color: #EA9343;
  color: #000000;
}

.active-3 {
  background-color: #D06300;
  color: #000000;
}

.text.first-pill {
  right: 40%;
}