/* 容器样式 */
.search-container {
  display: flex;
  align-items: center;
  width: 90%;
  /* 调整为所需的宽度 */
  height: 40px;
  /* 调整为所需的高度 */
  border: 1px solid #ccc;
  /* 边框颜色 */
  border-radius: 20px;
  /* 圆角边框 */
  background-color: rgb(0, 0, 0);
  /* 背景颜色 */
}

.search-icon {
  width: 20px;
  /* 图标宽度 */
  height: 20px;
  /* 图标高度 */
  margin-right: 10px;
  /* 图标右侧内边距 */
}

.icon {
  width: 100%;
  height: 100%;
}

/* 输入框样式 */
.search-input {
  flex: 1;
  border: none;
  height: 100%;
  padding: 0 10px;
  border-radius: 15px 0 0 15px;
  background-color: transparent;
  /* 背景透明 */
  color: #fff;
  /* 文字颜色 */
}