<view class="container">
  <view class="draw-area">
    <view class="progress-container">
      <progress step="4"></progress>
    </view>

    <view if="{{!!urls}}" class="comic-container">
      <image src="{{urls[0]}}" mode="aspectFit"></image>
    </view>

    <view class="button-group">
      <confirmButton text="Back" bind:back="goBack" eventName="back" />
      <confirmButton text="OK" bind:ok="done" eventName="ok" />
    </view>
  </view>
  <navigation />
</view>