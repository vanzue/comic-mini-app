<view class="container">
  <view class="draw-area">
    <view class="progress-container">
      <progress step="4"></progress>
    </view>

    <view class="comic-container">
      <view wx:if="{{proportion === '1 : 1'}}" class="proportion-container">
        <view wx:if="{{grid === 1}}" class="grid-container grid-1">
          <view wx:for="{{urls}}" wx:key="index" class="image-wrapper-1">
            <image bindtap="previewImage" class="img" src="{{item}}" data-url="{{item}}" mode="aspectFill"></image>
          </view>
        </view>
        <view wx:if="{{grid === 2}}" class="grid-container grid-2">
          <view wx:for="{{urls}}" wx:key="index" class="image-wrapper-2">
            <image bindtap="previewImage" class="img" src="{{item}}" data-url="{{item}}" mode="aspectFill"></image>
          </view>
        </view>
        <view wx:if="{{grid === 4}}" class="grid-container grid-4">
          <view wx:for="{{urls}}" wx:key="index" class="image-wrapper-4">
            <image bindtap="previewImage" class="img" src="{{item}}" data-url="{{item}}" mode="aspectFill"></image>
          </view>
        </view>
      </view>

      <!-- 3:4 Proportion -->
      <view wx:if="{{proportion === '3 : 4'}}" class="proportion-container">
        <view wx:if="{{grid === 1}}" class="grid-container grid-1">
          <image bindtap="previewImage" src="{{urls[0]}}" mode="aspectFit"></image>
        </view>
        <view wx:if="{{grid === 2}}" class="grid-container grid-2">
          <image bindtap="previewImage" wx:for="{{urls}}" wx:key="index" src="{{item}}" mode="aspectFit"></image>
        </view>
        <view wx:if="{{grid === 4}}" class="grid-container grid-4">
          <image bindtap="previewImage" wx:for="{{urls}}" wx:key="index" src="{{item}}" mode="aspectFit"></image>
        </view>
      </view>
    </view>

    <view class="button-group">
      <confirmButton text="Back" bind:back="goBack" eventName="back" />
      <confirmButton text="OK" bind:ok="done" eventName="ok" />
    </view>
  </view>
  <navigation />
</view>