.illusion-title{
  justify-content: center;
  align-items: center;
  color: #ffffff;
  margin: 20px;
}

.swiper-container {
  width: 50%; /* 调整为适合的宽度 */
  border-radius: 20px; /* 圆角的大小 */
  overflow: hidden; /* 隐藏超出圆角部分的图片 */
  box-shadow: 0 4px 8px rgba(0,0,0,0.1); /* 可选的阴影效果 */
  height: 300px;
  margin-bottom: 30px;
}

.swiper-style{
  height: 100%;
}

.gradient-background{
  width: 100%; /* 背景宽度填充整个容器 */
  height: 800px; /* 调整高度 */
  background: linear-gradient(to right, #e7eaec, #8b9fa0); /* 默认渐变色 */
}

.button-group{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.selection-button{
  width: 14%;
  height: 20px;
  border-radius: 8px; /* 圆角的大小 */
  border: #d6d2d2 solid 1px;
  background: black;
  margin: 10px 10px 10px 10px;
}