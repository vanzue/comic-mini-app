.header {
  background-color: #202020;
  /* Ensure the header background is white */
  width: 80%;
}

.search {
  height: 36px;
  width: 100%;
  background-color: #fff;
  /* Background color for search bar */
  border: 1px solid #ddd;
  /* Add a subtle border */
  border-radius: 10px;
}

.tab-container {
  display: flex;
  flex-direction: row;
  white-space: nowrap;
  overflow-x: auto;
  /* 允许水平滚动 */
  width: 100%;
}

.say-hello {
  font-size: medium;
  align-items: flex-end;
  color: #fff;
  margin: 2.0vh;
  display: flex;
  flex-direction: row;
  width: 90%;
  justify-content: space-between;
}

.hello-text {
  justify-content: start;
  margin-left: 1vh;
}

.tab {
  font-size: 10px;
  color: #fff;
  border: solid 1px white;
  background-color: black;
  width: 25%;
  height: 20px;
  border-radius: 12px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  margin: 5px;
}

.tab.active {
  background-color: #bb3625;
  border: none;
  font-weight: bold;
  /* Make active tab bolder */
  border-bottom: 3px solid #000;
  /* Thicker underline for active tab */
}

.card-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  /* 在每行组件之间留出空隙 */
  background-color: #000;
}

.place-holder {
  height: 50vh;
}

.skip {
  color: rgb(167, 165, 165);
  font-size: 20rpx;
}

.card {
  width: 32%;
  height: 25vh;
}