/* 容器样式 */
.search-container {
  display: flex;
  align-items: center;
  width: 90%;
  /* 调整为所需的宽度 */
  height: 40px;
  /* 调整为所需的高度 */
  border: 1px solid #ccc;
  /* 边框颜色 */
  border-radius: 20px;
  /* 圆角边框 */
  background-color: rgb(0, 0, 0);
  /* 背景颜色 */
}

.search-icon {
  width: 20px;
  /* 图标宽度 */
  height: 20px;
  /* 图标高度 */
  margin-right: 10px;
  /* 图标右侧内边距 */
}

.icon {
  width: 100%;
  height: 100%;
}

/* 输入框样式 */
.search-input {
  flex: 1;
  border: none;
  height: 100%;
  padding: 0 10px;
  border-radius: 15px 0 0 15px;
  background-color: transparent;
  /* 背景透明 */
  color: #fff;
  /* 文字颜色 */
}

/* 图标样式 */
.search-icon {
  width: 20px;
  /* 图标宽度 */
  height: 20px;
  /* 图标高度 */
  margin-right: 10px;
  /* 图标右侧内边距 */
}


.header {
  background-color: #202020;
  /* Ensure the header background is white */
  width: 80%;
}

.search {
  height: 36px;
  width: 100%;
  background-color: #fff;
  /* Background color for search bar */
  border: 1px solid #ddd;
  /* Add a subtle border */
  border-radius: 10px;
}

.tab-container {
  display: flex;
  flex-direction: row;
  white-space: nowrap;
  overflow-x: auto; /* 允许水平滚动 */
  width: 100%;
}

.say-hello {
  font-size: medium;
  color: #fff;
  margin: 2.0vh;
  display: flex;
  flex-direction: row;
  width: 90%;
}

.hello-text {
  justify-content: start;
  margin-left: 1vh;
}

.tab {
  font-size: 10px;
  color: #fff;
  border: solid 1px white;
  background-color: black;
  width: 30%;
  height: 20px;
  border-radius: 12px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  margin: 5px;
}

.tab.active {
  background-color: #bb3625;
  border: none;
  font-weight: bold;
  /* Make active tab bolder */
  border-bottom: 3px solid #000;
  /* Thicker underline for active tab */
}

.card-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start; /* 在每行组件之间留出空隙 */
  background-color: #000;
  padding: 10px;
}

.place-holder {
  height: 50vh;
}
