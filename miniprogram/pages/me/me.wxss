.title {
  width: 100%;
  color: #ffffff;
  font-size: 24px;
  margin-top: 3vh;
  margin-bottom: 2vh;
  text-align: start;
}

.comics-container {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  justify-content: space-between;
}

.comic-item-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow: hidden;
  width: 30%;
  height: 30vh;
}

.comic-item {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #000000;
  border-radius: 10px;
  height: 20vh;
}

.comic-image-container {
  height: 80%;
  width: 100%;
  padding-left: 15px;
  border-radius: 0;
}

.image {
  width: 100%;
  height: 100%;
}

.comic-title {
  text-align: left;
  font-size: 14px;
  color: #ffffff;
}

.add-new {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  background-color: #444444;
}

.add-icon {
  font-size: 36px;
  color: #ffffff;
}

.comic-footer {
  margin-top: 8px;
  width: 90%;
  height: 2vh;
  background-color: #F5CD94;
  overflow: hidden;
  border-top-left-radius: 10px;
  border-bottom-left-radius: 10px;
}

.collection-title{
  font-size: 10px;
  color: #ffffff;
  width: 100%;
  text-align: center;
  padding-top: 10px;
}