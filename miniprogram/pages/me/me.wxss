.title {
  width: 100%;
  color: #ffffff;
  font-size: 24px;
  margin-top: 3vh;
  margin-bottom: 2vh;
  text-align: center;
}

.comics-container {
  margin-top: 10vh;
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  height: 100px;
  flex-direction: row;
  justify-content: flex-start;
}

.comic-item-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow: hidden;
  width: 30%;
  height: 30vh;
}

.comic-item {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #000000;
  border-radius: 10px;
  height: 20vh;
}

.comic-image-container {
  height: 80%;
  width: 100%;
  padding-left: 15px;
  border-radius: 0;
}

.image {
  width: 100%;
  height: 100%;
}

.comic-title {
  text-align: left;
  font-size: 14px;
  color: #ffffff;
}

.add-new {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  background-color: #444444;
}

.add-icon {
  font-size: 36px;
  color: #ffffff;
}

.collection-title {
  font-size: 10px;
  color: #ffffff;
  width: 100%;
  text-align: center;
  padding-top: 10px;
  margin-top: 5vh;
}

.collection-preview {
  width: 30%;
  margin-left: 3%;
}

.spinner {
  position: fixed;
  top: 50vh;
  border: 4px solid rgba(0, 0, 0, 0.1);
  width: 30px;
  height: 30px;
  border-radius: 50%;
  border-left-color: #09f;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.single-collection {
  height: 50vh;
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
  border-radius: 20px;
}

.swiper-container {
  width: 90%;
  height: 90%;
}

.slide-image {
  border-radius: 20px;
  width: 100%;
  height: 100%;
}

.full-pic-container {
  width: 100%;
  height: 50vh;
}

.picture {
  border-radius: 3%;
  width: 100%;
  height: 100%;
}

.alter-group {
  width: 80%;
  display: flex;
  flex-direction: row;
  margin-top: 3vh;
  justify-content: space-around;
  position: fixed;
  bottom: 10vh;
}

.alter-icon {
  width: 24px;
  height: 24px;
}

.overlay-canvas{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}